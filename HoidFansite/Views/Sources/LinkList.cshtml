@model List<HoidFansite.Models.Link>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Related Links";
}

<!DOCTYPE ="html">

<html>
<head>
    <!-- _Layout -->
</head>
<body>
    <div class="panel-body">
        <table class="table table-sm table-striped table-bordered">
            <tbody>
                @foreach (HoidFansite.Models.Link l in Model)
                {
                    <tr>
                        <td><a href="@l.Address">@l.Title</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>