@model List<HoidFansite.Models.Book>
@{
    Layout = "_Layout";
    ViewData["Title"] = "The Books";
}

<!DOCTYPE ="html">

<html>
<head>
    <!-- _Layout -->
</head>
<body>
    <div class="panel-body">
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Publication Date</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Series</th>
                </tr>
            </thead>
            <tbody>
                <!--- Displays all books contained within the repository -->
                @foreach (HoidFansite.Models.Book b in Model)
                {
                    <tr>
                        <td>@b.Title</td>
                        <td>@b.PublicationDate.ToShortDateString()</td>
                        <td>@b.Author</td>
                        <td>@b.Isbn</td>
                        <td>@b.Series</td>
                    </tr>
                    <tr>
                        <td colspan="5">@b.Summary</td>
                    </tr>
                    <tr>
                        <td colspan="5">@b.WheresHoid</td>
                    </tr>
                    <tr>
                        <td colspan="5"> </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
