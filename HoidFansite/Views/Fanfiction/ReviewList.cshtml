@model List<UserReview>

@{
    Layout = "_Layout";
    ViewData["Title"] = "Reviews for: " + ViewBag.Fanfic.Title;
}

<!DOCTYPE html>

<html>
<head>
    <!-- _Layout -->
</head>
<body>
    <div class="panel-body">
        <h4>@ViewBag.Fanfic.Title</h4>
        <table class="table table-sm table-striped table-bordered">
            <thead>
                <tr>
                    <th colspan="2">Title</th>
                    <th>Author</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td colspan="2">@ViewBag.Fanfic.Title</td>
                    <td>@ViewBag.Fanfic.Author</td>
                </tr>
                <tr>
                    <td colspan="3">@ViewBag.Fanfic.Body</td>
                </tr>
            </tbody>
        </table>
        @if (Model.Count() == 0)
        {
            <h4>No Reviews Yet!</h4>
            <a asp-action="ReviewForm" asp-route-id="@ViewBag.Fanfic.StoryID">Be the first to review!</a>
        }
        else
        {
            <h4>Reviews</h4>
            @foreach (UserReview r in Model)
            {
                <table class="table table-sm table-striped table-bordered">
                    <thead>
                        <tr>
                            <th>Review Title</th>
                            <th>Reviewer</th>
                            <th>Rating</th>
                        </tr>
                    </thead>
                    <tbody>

                        <tr>
                            <td>@r.Title</td>
                            <td>@r.Author</td>
                            <td>@r.Rating</td>
                        </tr>
                        <tr>
                            <td colspan="3">@r.Review</td>
                        </tr>
                    </tbody>
                </table>
            }
            <a asp-action="ReviewForm" asp-route-id="@ViewBag.Fanfic.StoryID">Add your own review!</a>
        }
    </div>
</body>
</html>