@model String
@{
    Layout = "_myLayout";
    string storyTitle = HoidFansite.Models.StoryRepository.GetStoryByID(Model).Title;
    ViewBag.Title = "Review: " + storyTitle;
}
<!DOCTYPE html>
<html>
<head>
    <!-- _myLayout -->
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-ceenter"><h4>Your Story</h4></div>
        <div class="panel-body">
            <form class="p-a-1" asp-action="ReviewForm" method="post">
                <div class="form-group">
                    <label for="title">Review Title</label><br />
                    <input class="form-control" name="title" /><br />
                </div>
                <div class="form-group">
                    <label for="author">Your Name</label><br />
                    <input class="form-control" name="author" /><br />
                </div>
                <div class="form-group">
                    <label for="review">Your Review</label><br />
                    <textarea class="form-control" type="text" name="review"></textarea><br />
                </div>
                <div class="form-group">
                    <label for="rating">Your Rating</label><br />
                    <input type="radio" name="rating" value="1" />1 star<br />
                    <input type="radio" name="rating" value="2" />2 star<br />
                    <input type="radio" name="rating" value="3" />3 star<br />
                    <input type="radio" name="rating" value="4" />4 star<br />
                    <input type="radio" name="rating" value="5" checked />5 star<br />
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Submit Review
                    </button>
                </div>
            </form>
        </div>
    </div>
</body>
</html> 