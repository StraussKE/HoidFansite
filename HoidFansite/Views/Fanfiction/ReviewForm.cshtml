@model String
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Add a Review</title>
</head>
<body>
    <h1>Review for <em> @Model</em></h1>

    <form method="post">
        <label for="title">Review Title</label><br />
        <input name="title" /><br />

        <label for="author">Your Name</label><br />
        <input name="author" /><br />

        <label for="review">Your Review</label><br />
        <textarea type="review" name="body"></textarea><br />

        <input type="submit" value="Enter" />
    </form>
</body>
</html> 